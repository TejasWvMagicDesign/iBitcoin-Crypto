       value="<%- global.globalMessage != null && global.globalMessage != "" ? global.globalMessage : '' %>">
<% if(global.globalMessage != null && global.globalMessage != "") {
    global.globalMessage = ""
} %>


<!--Toast function-->
<script>
    function showMDSnack(message) {
        MDSnackbars.show({text: message, timeout: 7500, align: 'right', animation: 'slideup'});
    }

    $(document).ready(function () {
        const messageMDSnack = $('#messageMDSnack').val();
        if (messageMDSnack !== "") {
            showMDSnack(messageMDSnack);
            $('#messageMDSnack').val("");
        }
    });
</script>

<script>

    function CurrencyFormat(n, currency) {
        return currency + n.toFixed(2).replace(/./g, function (c, i, a) {
            return i > 0 && c !== "." && (a.length - i) % 3 === 0 ? "," + c : c;
        });
    }

    $(document).ready(function () {
        $.ajax({
            url: '/FetchWalletAmount',
            type: "get",
            success: function (data) {
                if (data.status) {
                    $('#walletAmount').html(CurrencyFormat(data.balance, '<i class="fa fa-dollar"> </i> '));
                }

            }
        });
    });
</script>
